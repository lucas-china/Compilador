Class exemplo;
Int: numero;
Str: mensagem;

Int fatorial (Int fat){
  Int: fat;
fat = 0;
    if (fat>1){
        return fat * fatorial(fat-1);
    } else{
   return 1;
    }
return 0 ;
  }

Void resultado (Int valor){
Int: valor;  
valor = 0;
   mensagem = "resultado: ";
   print (mensagem, valor);
    return;
}

Main {
